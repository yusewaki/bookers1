

<h1><span>Books</span></h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

<% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
<% end %>
  </table>


<h2><span>New book</span></h2>

<%= form_with model:@book, local: true do |f| %>
<%= render 'layouts/messages', model: f.object %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>
<% end %>
